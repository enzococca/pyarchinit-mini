digraph HarrisMatrix {
    charset="utf-8";
    rankdir=BT;

    // Epochs (Periods)
    "Periodo 1 : Modern" [shape=plaintext];
    "Periodo 2 : Medieval" [shape=plaintext];
    "Periodo 3 : Roman" [shape=plaintext];

    // Nodes (Stratigraphic Units) - Format: US_number_description_epoch
    "US_1001_Surface layer_Modern" [label="US 1001\nSurface layer", shape=box, fillcolor="#FFCCCC", style=filled];
    "US_1002_Medieval floor_Medieval" [label="US 1002\nMedieval floor", shape=box, fillcolor="#CCFFCC", style=filled];
    "US_1003_Roman wall_Roman" [label="US 1003\nRoman wall", shape=box, fillcolor="#CCCCFF", style=filled];
    "US_1004_Foundation_Roman" [label="US 1004\nFoundation", shape=box, fillcolor="#FFFFCC", style=filled];

    // Edges (Stratigraphic relationships)
    "US_1001_Surface layer_Modern" -> "US_1002_Medieval floor_Medieval" [label="Covers"];
    "US_1002_Medieval floor_Medieval" -> "US_1003_Roman wall_Roman" [label="Covers"];
    "US_1002_Medieval floor_Medieval" -> "US_1004_Foundation_Roman" [label="Covers"];
    "US_1003_Roman wall_Roman" -> "US_1004_Foundation_Roman" [label="Leans against"];
}
